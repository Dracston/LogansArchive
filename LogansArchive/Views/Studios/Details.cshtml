@model LogansArchive.Models.Studio

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Studio</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.yearEstablished)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.yearEstablished)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>
</div>

<div class="col-md-4">
    <h4>Games Published</h4>
    <ul>
        @foreach (Game game in ViewBag.Games)
        {
            <li>@game.Title</li>
        }
    </ul>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.studioId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
